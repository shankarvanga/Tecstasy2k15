<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="251dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/lan" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Lan Gaming"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0D8E01" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="A gathering in which gamers(devotees of computer games) will gather to share a local area network(LAN) and participate in extended gaming sessions of popular games such as Counter Strike and NFS."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#3A3C39" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="For registration and further information.."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#3A3C39" />

            <Button
                android:id="@+id/chemb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="#795548"
                android:text="Further info"
                android:textColor="@android:color/white"
                android:layout_gravity="center" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
